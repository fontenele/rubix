<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <tabela>acessos</tabela>
    <schema>gerencial</schema>
    <sequence>acessos_int_cod_seq</sequence>
    <model>Gerencial\Model\Acessos</model>
    <service>
        <name>Gerencial\Service\AcessosService</name>
        <items>
            <cod>
                <name>int_cod</name>
                <primaryKey>1</primaryKey>
                <length>10</length>
                <type>numeric</type>
            </cod>
            <nome>
                <name>str_nome_acesso</name>
                <descriptionKey>1</descriptionKey>
                <length>300</length>
                <type>text</type>
                <required>1</required>
            </nome>
            <perfil>
                <name>int_perfil</name>
                <length>10</length>
                <type>numeric</type>
                <required>1</required>
            </perfil>
            <nomePerfil>
                <name>str_nome_perfil</name>
                <join>
                    <schema>gerencial</schema>
                    <table>perfis</table>
                    <on>perfis.int_cod = acessos.int_perfil</on>
                    <where>
                        <str_nome_perfil>str_nome</str_nome_perfil>
                    </where>
                </join>
            </nomePerfil>
        </items>
    </service>
    <view>
        <items>
            <int_cod>
                <type>hidden</type>
                <label>Cód</label>
                <edit>1</edit>
                <add>1</add>
            </int_cod>
            <str_nome_acesso>
                <type>text</type>
                <label>Nome</label>
                <hint>Informe o Nome</hint>
                <hintview>focus</hintview>
                <placeholder>Nome</placeholder>
                <required>1</required>
                <maxlength>300</maxlength>
                <edit>1</edit>
                <add>1</add>
            </str_nome_acesso>
            <int_perfil>
                <type>select</type>
                <label>Perfil</label>
                <hint>Informe o Perfil</hint>
                <hintview>focus</hintview>
                <required>1</required>
                <valueoptions>
                    <option>
                        <label>Selecione</label>
                        <value></value>
                    </option>
                    <caller>$this->getAttributeArray</caller>
                    <args>
                        <arg>perfis</arg>
                        <arg>int_cod</arg>
                        <arg>str_nome</arg>
                    </args>
                </valueoptions>
                <search>1</search>
                <edit>1</edit>
                <add>1</add>
            </int_perfil>
            <str_nome_perfil>
                <label>Perfil</label>
            </str_nome_perfil>
            <submit_acessos>
                <type>submit</type>
                <label>Salvar</label>
                <name>submit</name>
                <class>btn-primary</class>
                <hint>Enviar o formulário</hint>
                <search>1</search>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </submit_acessos>
        </items>
    </view>
</zend-config>
