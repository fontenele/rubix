<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <tabela>artigos</tabela>
    <schema>artigos</schema>
    <sequence>artigos_int_cod_seq</sequence>
    <model>Artigos\Model\Artigos</model>
    <service>
        <name>Artigos\Service\ArtigosService</name>
        <items>
            <cod>
                <name>int_cod</name>
                <primaryKey>1</primaryKey>
                <length>10</length>
                <type>numeric</type>
            </cod>
            <chamada>
                <name>str_chamada</name>
                <descriptionKey>1</descriptionKey>
                <length>140</length>
                <type>text</type>
                <required>1</required>
            </chamada>
            <titulo>
                <name>str_titulo</name>
                <length>140</length>
                <type>text</type>
                <required>1</required>
            </titulo>
            <conteudo>
                <name>str_conteudo</name>
                <type>richtext</type>
                <required>1</required>
            </conteudo>
            <dataCriacao>
                <name>dat_criacao</name>
                <type>timestamp</type>
            </dataCriacao>
            <dataInicioPublicacao>
                <name>dat_inicio_publicacao</name>
                <type>timestamp</type>
                <required>1</required>
            </dataInicioPublicacao>
            <dataFimPublicacao>
                <name>dat_fim_publicacao</name>
                <type>timestamp</type>
                <required>1</required>
            </dataFimPublicacao>
            <dataUltimaEdicao>
                <name>dat_ultima_edicao</name>
                <type>timestamp</type>
            </dataUltimaEdicao>
            <redator>
                <name>int_redator</name>
                <length>10</length>
                <type>numeric</type>
                <required>1</required>
            </redator>
            <nomeRedator>
                <alias>uredator</alias>
                <name>str_nome_redator</name>
                <type>left</type>
                <join>
                    <schema>gerencial</schema>
                    <table>usuarios</table>
                    <on>uredator.int_cod = artigos.int_redator</on>
                    <where>
                        <str_nome_redator>str_nome</str_nome_redator>
                    </where>
                </join>
            </nomeRedator>
            <editor>
                <name>int_editor</name>
                <length>10</length>
                <type>numeric</type>
            </editor>
            <nomeEditor>
                <alias>ueditor</alias>
                <name>str_nome_editor</name>
                <type>left</type>
                <join>
                    <schema>gerencial</schema>
                    <table>usuarios</table>
                    <on>ueditor.int_cod = artigos.int_editor</on>
                    <where>
                        <str_nome_editor>str_nome</str_nome_editor>
                    </where>
                </join>
            </nomeEditor>
            <situacao>
                <name>int_situacao</name>
                <length>1</length>
                <type>integer</type>
                <required>1</required>
            </situacao>
            <destaque>
                <name>int_destaque</name>
                <length>1</length>
                <type>integer</type>
                <required>1</required>
            </destaque>
            <imagemDestaque>
                <name>str_img_destaque</name>
                <length>200</length>
                <type>text</type>
            </imagemDestaque>
        </items>
    </service>
    <view>
        <items>
            <int_cod>
                <type>hidden</type>
                <label>Cód</label>
                <datagrid>1</datagrid>
                <datagridsize>1%</datagridsize>
                <datagridalign>center</datagridalign>
                <edit>1</edit>
                <add>1</add>
            </int_cod>
            <str_chamada>
                <type>textarea</type>
                <class>input-xxlarge</class>
                <label>Chamada</label>
                <hint>Informe a Chamada</hint>
                <hintview>focus</hintview>
                <maxlength>140</maxlength>
                <required>1</required>
                <datagrid>2</datagrid>
                <datagridsize>20%</datagridsize>
                <search>1</search>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </str_chamada>
            <str_titulo>
                <type>textarea</type>
                <class>input-xxlarge</class>
                <label>Título</label>
                <hint>Informe o Título</hint>
                <hintview>focus</hintview>
                <required>1</required>
                <maxlength>140</maxlength>
                <edit>1</edit>
                <add>1</add>
            </str_titulo>
            <str_conteudo>
                <type>richtext</type>
                <label>Conteúdo</label>
                <hint>Informe o Conteúdo</hint>
                <hintview>focus</hintview>
                <required>1</required>
                <edit>1</edit>
                <add>1</add>
            </str_conteudo>
            <int_redator>
                <type>select</type>
                <label>Redator</label>
                <required>1</required>
                <valueoptions>
                    <option>
                        <label>Selecione</label>
                        <value></value>
                    </option>
                    <caller>$this->getAttributeArray</caller>
                    <args>
                        <arg>usuarios</arg>
                        <arg>int_cod</arg>
                        <arg>str_nome</arg>
                    </args>
                </valueoptions>
                <search>2</search>
                <edit>1</edit>
                <add>1</add>
            </int_redator>
            <int_editor>
                <type>select</type>
                <label>Editor</label>
                <valueoptions>
                    <option>
                        <label>Selecione</label>
                        <value></value>
                    </option>
                    <caller>$this->getAttributeArray</caller>
                    <args>
                        <arg>usuarios</arg>
                        <arg>int_cod</arg>
                        <arg>str_nome</arg>
                    </args>
                </valueoptions>
                <search>3</search>
                <edit>1</edit>
                <add>1</add>
            </int_editor>
            <str_nome_redator>
                <label>Redator</label>
                <datagrid>3</datagrid>
                <datagridsize>10%</datagridsize>
                <delete>1</delete>
            </str_nome_redator>
            <str_nome_editor>
                <label>Editor</label>
                <datagrid>4</datagrid>
                <datagridsize>10%</datagridsize>
                <delete>1</delete>
            </str_nome_editor>
            <dat_criacao>
                <type>datetime</type>
                <label>Dt. Criação</label>
                <datagrid>5</datagrid>
                <datagridsize>10%</datagridsize>
                <datagridalign>center</datagridalign>
                <delete>1</delete>
            </dat_criacao>
            <dat_ultima_edicao>
                <type>datetime</type>
                <label>Última Edição</label>
                <delete>1</delete>
            </dat_ultima_edicao>
            <dat_inicio_publicacao>
                <type>datetime</type>
                <label>Início Pub.</label>
                <datagrid>6</datagrid>
                <datagridsize>10%</datagridsize>
                <datagridalign>center</datagridalign>
                <required>1</required>
                <add>1</add>
                <edit>1</edit>
                <delete>1</delete>
            </dat_inicio_publicacao>
            <dat_fim_publicacao>
                <type>datetime</type>
                <label>Término Pub.</label>
                <datagrid>7</datagrid>
                <datagridsize>10%</datagridsize>
                <datagridalign>center</datagridalign>
                <required>1</required>
                <add>1</add>
                <edit>1</edit>
                <delete>1</delete>
            </dat_fim_publicacao>
            <int_situacao>
                <type>select</type>
                <label>Situação</label>
                <datagrid>8</datagrid>
                <datagridsize>5%</datagridsize>
                <datagridalign>center</datagridalign>
                <valueoptions>
                    <option>
                        <label>Selecione</label>
                        <value></value>
                    </option>
                    <option>
                        <label>Ativo</label>
                        <value>1</value>
                    </option>
                    <option>
                        <label>Pendente</label>
                        <value>2</value>
                    </option>
                    <option>
                        <label>Inativo</label>
                        <value>3</value>
                    </option>
                </valueoptions>
                <search>4</search>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </int_situacao>
            <int_destaque>
                <type>check</type>
                <label>Dest.</label>
                <datagrid>9</datagrid>
                <datagridsize>5%</datagridsize>
                <datagridalign>center</datagridalign>
                <search>5</search>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </int_destaque>
            <str_img_destaque>
                <type>image</type>
                <label>Imagem Dest.</label>
                <edit>1</edit>
                <add>1</add>
            </str_img_destaque>
            <submit_artigos>
                <type>submit</type>
                <label>Salvar</label>
                <name>submit</name>
                <class>btn-primary</class>
                <hint>Enviar o formulário</hint>
                <search>1</search>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </submit_artigos>
        </items>
    </view>
</zend-config>
