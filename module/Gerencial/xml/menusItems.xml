<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <tabela>menus_items</tabela>
    <schema>gerencial</schema>
    <sequence>menus_items_int_cod_seq</sequence>
    <model>Gerencial\Model\MenusItems</model>
    <service>
        <name>Gerencial\Service\MenusItemsService</name>
        <items>
            <cod>
                <name>int_cod</name>
                <primaryKey>1</primaryKey>
                <length>10</length>
                <type>numeric</type>
            </cod>
            <codPai>
                <name>int_cod_pai</name>
                <length>10</length>
                <type>numeric</type>
            </codPai>
            <labelPai>
                <alias>pai</alias>
                <type>left</type>
                <name>str_label_pai</name>
                <join>
                    <schema>gerencial</schema>
                    <table>menus_items</table>
                    <on>pai.int_cod = menus_items.int_cod_pai</on>
                    <where>
                        <str_label_pai>str_label</str_label_pai>
                    </where>
                </join>
            </labelPai>
            <label>
                <name>str_label</name>
                <descriptionKey>1</descriptionKey>
                <length>200</length>
                <type>text</type>
                <required>1</required>
            </label>
            <target>
                <name>str_target</name>
                <type>text</type>
                <length>500</length>
            </target>
            <posicao>
                <name>int_posicao</name>
                <length>10</length>
                <type>numeric</type>
            </posicao>
            <codMenu>
                <name>int_menu</name>
                <length>10</length>
                <type>numeric</type>
                <required>1</required>
            </codMenu>
            <tipo>
                <name>str_tipo</name>
                <length>30</length>
                <type>text</type>
                <required>1</required>
            </tipo>
        </items>
    </service>
    <view>
        <items>
            <int_cod>
                <type>hidden</type>
                <label>Cód</label>
                <edit>1</edit>
                <add>1</add>
            </int_cod>
            <int_cod_pai>
                <type>select</type>
                <label>Pai</label>
                <hint>Informe o Item Pai</hint>
                <hintview>focus</hintview>
                <edit>1</edit>
                <add>1</add>
            </int_cod_pai>
            <str_label>
                <type>text</type>
                <label>Label</label>
                <hint>Informe a Label</hint>
                <hintview>focus</hintview>
                <placeholder>Label</placeholder>
                <required>1</required>
                <maxlength>200</maxlength>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </str_label>
            <str_target>
                <type>text</type>
                <label>URL</label>
                <hint>Informe a URL</hint>
                <hintview>focus</hintview>
                <placeholder>URL</placeholder>
                <maxlength>500</maxlength>
                <edit>1</edit>
                <add>1</add>
            </str_target>
            <int_posicao>
                <type>text</type>
                <label>Posição</label>
                <hint>Informe a Posição</hint>
                <hintview>focus</hintview>
                <placeholder>999</placeholder>
                <edit>1</edit>
                <add>1</add>
            </int_posicao>
            <int_menu>
                <type>select</type>
                <label>Menu</label>
                <hint>Informe o Menu</hint>
                <class>input-medium</class>
                <hintview>focus</hintview>
                <required>1</required>
                <valueoptions>
                    <option>
                        <label>Selecione</label>
                        <value></value>
                    </option>
                    <caller>$this->getAttributeArray</caller>
                    <args>
                        <arg>menus</arg>
                        <arg>int_cod</arg>
                        <arg>str_nome</arg>
                    </args>
                </valueoptions>
                <edit>1</edit>
                <add>1</add>
            </int_menu>
            <str_tipo>
                <type>select</type>
                <label>Tipo</label>
                <hint>Informe o Tipo</hint>
                <hintview>focus</hintview>
                <valueoptions>
                    <option>
                        <label>Selecione</label>
                        <value></value>
                    </option>
                    <option>
                        <label>Item</label>
                        <value>item</value>
                    </option>
                    <option>
                        <label>Título</label>
                        <value>titulo</value>
                    </option>
                    <option>
                        <label>Divisor</label>
                        <value>divisor</value>
                    </option>
                    <option>
                        <label>URL</label>
                        <value>url</value>
                    </option>
                </valueoptions>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </str_tipo>
            <submit_menus_items>
                <type>submit</type>
                <label>Salvar</label>
                <name>submit</name>
                <class>btn-primary</class>
                <hint>Enviar o formulário</hint>
                <search>1</search>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </submit_menus_items>
        </items>
    </view>
</zend-config>
