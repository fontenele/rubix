<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <tabela>usuarios</tabela>
    <schema>gerencial</schema>
    <sequence>usuarios_int_cod_seq</sequence>
    <model>Gerencial\Model\Usuarios</model>
    <service>
        <name>Gerencial\Service\UsuariosService</name>
        <items>
            <cod>
                <name>int_cod</name>
                <primaryKey>1</primaryKey>
                <length>10</length>
                <type>numeric</type>
            </cod>
            <login>
                <name>str_login</name>
                <descriptionKey>1</descriptionKey>
                <length>12</length>
                <type>text</type>
                <required>1</required>
            </login>
            <senha>
                <name>str_senha</name>
                <length>32</length>
                <type>text</type>
                <required>1</required>
            </senha>
            <perfil>
                <name>int_perfil</name>
                <length>10</length>
                <type>numeric</type>
                <required>1</required>
            </perfil>
            <nomePerfil>
                <name>str_nome_perfil</name>
                <join>
                    <schema>gerencial</schema>
                    <table>perfis</table>
                    <on>perfis.int_cod = usuarios.int_perfil</on>
                    <where>
                        <str_nome_perfil>str_nome</str_nome_perfil>
                    </where>
                </join>
            </nomePerfil>
            <nome>
                <name>str_nome</name>
                <length>200</length>
                <type>text</type>
                <required>1</required>
            </nome>
            <email>
                <name>str_email</name>
                <length>100</length>
                <type>text</type>
                <required>1</required>
            </email>
            <ultimoLogin>
                <name>dat_ultimo_login</name>
                <type>timestamp</type>
            </ultimoLogin>
        </items>
    </service>
    <view>
        <items>
            <int_cod>
                <type>hidden</type>
                <label>Cód</label>
                <datagrid>1</datagrid>
                <datagridsize>5%</datagridsize>
                <datagridalign>center</datagridalign>
                <edit>1</edit>
                <add>1</add>
            </int_cod>
            <str_login>
                <type>text</type>
                <label>Login</label>
                <hint>Informe o Login</hint>
                <hintview>focus</hintview>
                <placeholder>Login</placeholder>
                <required>1</required>
                <maxlength>12</maxlength>
                <datagrid>2</datagrid>
                <datagridsize>10%</datagridsize>
                <search>1</search>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </str_login>
            <str_senha>
                <type>password</type>
                <label>Senha</label>
                <hint>Informe a Senha</hint>
                <hintview>focus</hintview>
                <placeholder>Senha</placeholder>
                <required>1</required>
                <maxlength>12</maxlength>
                <edit>1</edit>
                <add>1</add>
            </str_senha>
            <int_perfil>
                <type>select</type>
                <label>Perfil</label>
                <hint>Informe o Perfil</hint>
                <hintview>focus</hintview>
                <required>1</required>
                <valueoptions>
                    <option>
                        <label>Selecione</label>
                        <value></value>
                    </option>
                    <caller>$this->getAttributeArray</caller>
                    <args>
                        <arg>perfis</arg>
                        <arg>int_cod</arg>
                        <arg>str_nome</arg>
                    </args>
                </valueoptions>
                <search>3</search>
                <edit>1</edit>
                <add>1</add>
            </int_perfil>
            <str_nome_perfil>
                <label>Perfil</label>
                <datagrid>4</datagrid>
                <datagridsize>20%</datagridsize>
                <delete>1</delete>
            </str_nome_perfil>
            <str_nome>
                <type>text</type>
                <label>Nome</label>
                <hint>Informe o Nome</hint>
                <hintview>focus</hintview>
                <placeholder>Nome</placeholder>
                <required>1</required>
                <maxlength>200</maxlength>
                <datagrid>3</datagrid>
                <datagridsize>20%</datagridsize>
                <search>2</search>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </str_nome>
            <str_email>
                <type>email</type>
                <label>E-mail</label>
                <hint>Informe o E-mail</hint>
                <hintview>focus</hintview>
                <placeholder>E-mail</placeholder>
                <required>1</required>
                <maxlength>100</maxlength>
                <datagrid>5</datagrid>
                <datagridsize>10%</datagridsize>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </str_email>
            <dat_ultimo_login>
                <type>datetime</type>
                <label>Último Login</label>
                <datagrid>6</datagrid>
                <datagridsize>20%</datagridsize>
                <delete>1</delete>
            </dat_ultimo_login>
            <submit_usuarios>
                <type>submit</type>
                <label>Salvar</label>
                <name>submit</name>
                <class>btn-primary</class>
                <hint>Enviar o formulário</hint>
                <search>1</search>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </submit_usuarios>
        </items>
    </view>
</zend-config>
