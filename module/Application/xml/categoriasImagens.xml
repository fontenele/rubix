<?xml version="1.0" encoding="UTF-8"?>
<zend-config>
    <tabela>categorias_imagens</tabela>
    <schema>public</schema>
    <sequence>categorias_imagens_int_cod_seq</sequence>
    <model>Application\Model\CategoriasImagens</model>
    <service>
        <name>Application\Service\CategoriasImagensService</name>
        <items>
            <cod>
                <name>int_cod</name>
                <primaryKey>1</primaryKey>
                <length>10</length>
                <type>numeric</type>
            </cod>
            <nome>
                <name>str_nome</name>
                <descriptionKey>1</descriptionKey>
                <length>100</length>
                <type>text</type>
                <required>1</required>
            </nome>
            <codPai>
                <name>int_cod_pai</name>
                <length>10</length>
                <type>integer</type>
            </codPai>
            <labelPai>
                <alias>pai</alias>
                <type>left</type>
                <name>str_label_pai</name>
                <join>
                    <schema>public</schema>
                    <table>categorias_imagens</table>
                    <on>pai.int_cod = categorias_imagens.int_cod_pai</on>
                    <where>
                        <str_label_pai>str_nome</str_label_pai>
                    </where>
                </join>
            </labelPai>
        </items>
    </service>
    <view>
        <items>
            <int_cod>
                <type>hidden</type>
                <label>Cód</label>
                <datagrid>1</datagrid>
                <edit>1</edit>
                <add>1</add>
            </int_cod>
            <str_nome>
                <type>text</type>
                <label>Nome</label>
                <hint>Informe o Nome</hint>
                <hintview>focus</hintview>
                <placeholder>Nome</placeholder>
                <required>1</required>
                <maxlength>100</maxlength>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </str_nome>
            <int_cod_pai>
                <type>select</type>
                <label>Pai</label>
                <hint>Informe o Item Pai</hint>
                <hintview>focus</hintview>
                <edit>1</edit>
                <add>1</add>
            </int_cod_pai>
            <submit_categorias_imagens>
                <type>submit</type>
                <label>Salvar</label>
                <name>submit</name>
                <class>btn-primary</class>
                <hint>Enviar o formulário</hint>
                <edit>1</edit>
                <add>1</add>
                <delete>1</delete>
            </submit_categorias_imagens>
        </items>
    </view>
</zend-config>
